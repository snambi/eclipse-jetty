<?xml version="1.0" encoding="UTF-8"?>
<document xmlns="http://maven.apache.org/changes/1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/changes/1.0.0 http://maven.apache.org/xsd/changes-1.0.0.xsd">

	<properties>
		<title>Eclipse Jetty Changes</title>
		<author>Christian Köberl</author>
	</properties>

	<body>
		<release version="3.5.0" date="2012-12-07">
			<action dev="ckoeberl" type="add">
				Added some more docs
			</action>
			<action dev="thred" type="add">
				Added Jetty context file handling
			</action>
			<action dev="thred" type="add">
				Support for Jetty 9 added.
			</action>
			<action dev="thred" type="add">
				Added table for exlcludes/includes - no regex anymore  
			</action>
			<action dev="thred" type="add">
				Added Jetty provided by plugin.
			</action>
			<action dev="thred" type="add">
				Support for Jetty 8 added.
			</action>
			<action dev="thred" type="remove">
				Support for Jetty 5 dropped.
			</action>
			<action dev="thred" type="fix" issue="3520146">
				Fixed Jetty version autodetection.
			</action>
			<action dev="thred" type="add">
				Jetty home can now be set via a variable.
			</action>
			<action dev="thred" type="add">
				Support for m2e-plugin: you can configure the scopes included in classpath (defaults to compile and runtime).
			</action>
			<action dev="thred" type="add">
				Webapp libraries are now loaded via Jetty classloader mechanism and not globally set as classpath (can be triggered optionally).
			</action>
			<action dev="thred" type="add">
				Classpath for webapp is now set via file - no problems with too long command line in Windows anymore :)
			</action>
			<action dev="thred" type="change">
				New logo with a shiny glow.
			</action>
			<action dev="thred" type="change">
				Refactored and beautified UI
			</action>
		</release>
		<release version="3.4.0-beta-1" date="2011-06-01">
			<action dev="ckoeberl" type="add">
				Jetty 7 compatability.
			</action>
			<action dev="thred" type="add">
				Enable JSP Support: JSP support and version can be selected in the run configuration.
      		</action>
      		<action dev="thred" type="add">
      			Excluded libraries can now be edited - default value is &quot;.*servlet-api.*, .*selenium-server.*standalone\.jar&quot;
      		</action>
		</release>

		<release version="3.4.0-alpha-2" date="2009-03-06">
			<action dev="ckoeberl" type="update">
				Jetty 5 and 6 compatability.
			</action>
		</release>

		<release version="3.4.0-alpha-1" date="2009-02-23"
			description="Initial release">
		</release>
	</body>
</document>